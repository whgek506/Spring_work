package sample03;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.context.support.FileSystemXmlApplicationContext;

public class HelloSpring {

	public static void main(String[] args) {
		//파일을 읽는 두 가지 방법
		//1. ApplicationContext applicationContext = new ClassPathXmlApplicationContext("applicationContext.xml");
		ApplicationContext applicationContext = new FileSystemXmlApplicationContext("scr/main/resources/applicationContext.xml");
		

	}

}

//프로젝트를 실행하면 web.xml를 무조건 읽음